<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.game.gui.controllers.TimeContainerController">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Total gameplay time">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="hoursLabel" text="0" />
                  <Label text=":" />
                  <Label fx:id="minutesLabel" text="00" />
                  <Label text=":" />
                  <Label fx:id="secondsLabel" text="00" />
                  <Label text=":" />
                  <Label fx:id="millisecondsLabel" text="000" />
               </children></HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
